<h3 align="center">Contacts</strong></h6>
<div class="center"><li class='btn btn-success btn-md'><%= link_to("Add Contact", new_contact_path(:client_id => @client.id)) %></li></div>
<% @contacts.each do |contact| %>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <strong><%= contact.first_name %> <%= contact.last_name %> - <%= contact.title %></strong>
        </div>
        <div class="panel-body">
            <div class="col-xs-10 col-offset-2">
                <ul>
                    <li>Phone: <%= contact.phone_number %> x<%= contact.phone_ext %></li>
                    <li>Email: <%= contact.email %></li>
                    <li>Cell: <%- contact.cell_number %></li>
                </ul>
            </div>
        </div>
        <div class="panel-footer">
            <%= link_to("Edit", edit_contact_path(contact), class: "btn btn-xs btn-primary") %>
            <%= link_to("Delete", contact_path(contact), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-xs btn-danger") %>
        </div>
    </div>
<% end %>
<li class='btn btn-success btn-md'><%= link_to("Add Contact", new_contact_path(:client_id => @client.id)) %></li>